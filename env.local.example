# アプリケーション環境設定
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# Basic認証設定（オプション）
# 本番環境では 'true' に設定することを推奨
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=change_this_password_in_production

# reCAPTCHA設定（必須）
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# メール送信設定 (Resend) - 必須
RESEND_API_KEY=your_resend_api_key_here

# microCMS設定（必須）
MICROCMS_SERVICE_DOMAIN=your_service_domain
MICROCMS_API_KEY=your_api_key_here

# セキュリティ設定
# IPアドレスハッシュ化用のソルト（本番環境では必ず変更してください）
IP_HASH_SALT=change_this_salt_for_ip_hashing_in_production

# 本番環境の追加設定
# NODE_ENV=production の場合、以下が自動で有効になります：
# - HTTPS強制リダイレクト
# - 厳格なCORSポリシー
# - セキュリティヘッダー
# - CSP（Content Security Policy）